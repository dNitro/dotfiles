#!/usr/bin/env zsh

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Shortcuts
alias d="cd ~/Documents/Dropbox"
alias dl="cd ~/Downloads"
alias ds="cd ~/Desktop"
alias p="cd ~/Projects"

alias g="git"
alias h="history"
alias j="jobs"
alias v='vim'
alias c='code .'
alias t="tree -C -a -I '.git|node_modules|bower_components|vendor'"
alias q='exit'
alias cls='clear' # Clear Screen

# NPM
alias nu='npm update -g'
alias ng='npm install -g'
alias ns='npm install --save'
alias nd='npm install --save-dev'

# yarn
alias ya='yarn add'
alias yad='yarn add --dev'
alias yas='yarn start'
alias yab='yarn build'
alias yat='yarn test'
alias yac='yarn create'

# http-server
alias hs='http-server -o'

# Homebrew
alias br='brew'
alias bru='brew update; brew upgrade --all; brew cleanup'
alias brc='brew cask'

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'
alias nit='/usr/bin/git --git-dir=/mnt/c/Users/Davoud/.myconfig/ --work-tree=/mnt/c/Users/Davoud'
alias nit='/usr/bin/git --git-dir=/Users/david/.myconfig/ --work-tree=/Users/david'
