snippet #{ "desc" A
#{$1}
endsnippet
snippet "^\s*@if " "desc" rA
@if ${1:expression} {
  ${2}
}
endsnippet
snippet "@else if " "desc" r
@else if ${1:expression} {
  ${2}
}
endsnippet
snippet "@for " "desc" r
@for $${1:variable} from ${2:start} through ${3:end} {
  ${4}
}
endsnippet
snippet "@each " "desc" r
@each $${1:MultipleVariables} in ${2:Multiple lists or maps} {
  ${3}
}
endsnippet
snippet "@while " "desc" r
@while ${1:expression} {
  ${2}
}
endsnippet
snippet "@mixin " "desc" r
@mixin ${1:name}(${2:arguments}) {
  ${3}
}
endsnippet
snippet "^\s*@include " "desc" rA
@include ${1:mixin};
endsnippet
snippet "@function " "desc" r
@function ${1:name}(${2:arguments}) {
  ${3}
}
endsnippet
snippet "@return " "desc" r
@return ${1:expression};
endsnippet
