# .editorconfig
#
# To globalize whitespace amongst editors and collaborators
# =========================================================

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,coffee,json,css,s{a,c}ss,pug,html,vue}]
indent_size = 2

[{Makefile,.gitconfig}]
indent_style = tab
